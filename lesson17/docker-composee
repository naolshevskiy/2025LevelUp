version: '3.8'

services:
  db:
    image: postgres:12
    restart: always
    environment:
      POSTGRES_DB: webbooks_db
      POSTGRES_USER: postgres
      POSTGRES_PASSWORD: postgres
    volumes:
      - ./src/main/resources/data.sql:/docker-entrypoint-initdb.d/data.sql:ro
    networks:
      - backend

  app:
    build: .
    ports:
      - "8080:8080"
    depends_on:
      - db
    networks:
      - frontend
      - backend

networks:
  frontend:
    driver: bridge
  backend:
    driver: bridge

    